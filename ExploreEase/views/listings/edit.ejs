<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edite your Listing</h3>
    <form method="POST" action ="/listings/<%= listing._id %>?_method=PUT">
        <div class ="mb-3">
             <label for="title"class="form-labal">Title</label>
            <input name ="listing[title]" class="form-control" value=" <%= listing.title %>"  type="text">
        </div>

        <div class ="mb-3">
            <label for="description"class="form-labal">Description</label>
            <textarea name="listing[description]"class="form-control" > <%= listing.description %> </textarea>
        </div>

        <div class ="mb-3">
            <label for="image"class="form-labal">Image-Link</label>
            <input name ="listing[image]" value=" <%= listing.image %>" type="text" class="form-control" />
        </div>
        <div class="row ">
        <div class ="mb-3 col-md-4">
            <label for="price"class="form-labal">Price</label>
            <input  name="listing[price]" value="<%=listing.price %> "class ="form-control" />
        </div>
    
        <div class ="mb-3 col-md-8">
            <label for="country"class="form-labal">Country</label>
            <input type="text" name="listing[country]" value="<%=listing.country %>"class="form-control"/>
        </div>
        </div>
        <div class ="mb-3">
            <label for="location"class="form-labal">location</label>
            <input type="text" name="listing[location]" value="<%= listing.location  %>"class="form-control"/>
        </div>
        
        <button class="btn btn-dark mt-3 mb-3" >Edit</button>
    </form>
</div>
</div>
